<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:background="#0C1920"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Home">

    <FrameLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:lottie_speed="1.5"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/linklottie" />

    </FrameLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:rowCount="2">


        <androidx.cardview.widget.CardView
            android:id="@+id/weather"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="15dp"
            android:layout_margin="10dp"
            android:elevation="4dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient"
                android:columnCount="2"
                android:rowCount="2">

                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:text="Whole Bunch of turbulence"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/weatherIcon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/weatherIcon"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_gravity="right"
                    android:layout_margin="15dp"
                    android:layout_marginEnd="53dp"
                    android:elevation="5dp"
                    android:src="@drawable/storm"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/city"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>

    <GridLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:rowCount="3">


        <androidx.cardview.widget.CardView
            android:id="@+id/connect"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="15dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            android:elevation="4dp"
            android:layout_height="0dp"
            android:layout_width="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="2"
                    android:src="@drawable/lowtemperature"
                    android:layout_width="50dp"
                    android:layout_margin="15dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Temperatura"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/temperature"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="0°C"
                    android:textSize="28sp"
                    android:layout_height="wrap_content"/>
                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graph1"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="75dp"
                    android:layout_marginEnd="5dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/settings"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="15dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            android:elevation="4dp"
            android:layout_height="0dp"
            android:layout_width="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="2"
                    android:src="@drawable/humidity"
                    android:layout_width="50dp"
                    android:layout_margin="15dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Humidade do Ar"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/humidityAir"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="0%"
                    android:textSize="28sp"
                    android:layout_height="wrap_content"/>
                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graph2"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="75dp"
                    android:layout_marginEnd="5dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/feedback"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="15dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            android:elevation="4dp"
            android:layout_height="0dp"
            android:layout_width="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="2"
                    android:src="@drawable/plant"
                    android:layout_width="50dp"
                    android:layout_margin="15dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Humidade do Solo"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/humiditySoil"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="0%"
                    android:textSize="28sp"
                    android:layout_height="wrap_content"/>
                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graph3"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="75dp"
                    android:layout_marginEnd="5dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/about"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="15dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            android:elevation="4dp"
            android:layout_height="0dp"
            android:layout_width="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="2"
                    android:src="@drawable/cpu"
                    android:layout_width="50dp"
                    android:layout_margin="15dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Temperatura CPU"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/temperatureCPU"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="0°C"
                    android:textSize="28sp"
                    android:layout_height="wrap_content"/>
                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graph4"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="75dp"
                    android:layout_marginEnd="5dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_weight="0.8"
        android:columnCount="1"
        android:rowCount="2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/rega"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="15dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            android:elevation="4dp"
            android:layout_height="0dp"
            android:layout_width="0dp">
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UseSwitchCompatOrMaterialXml">
                <ImageView
                    android:layout_weight="0"
                    android:src="@drawable/waterhose"
                    android:layout_width="30dp"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:text="Estado\nSistema Rega"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/ledState"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:text="Unknown"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"/>
                <Switch
                    android:id="@+id/regaSwitch"
                    android:layout_weight="0"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/white"
                    android:trackTint="#B0B0B0"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/modo"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="15dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            android:elevation="4dp"
            android:layout_height="0dp"
            android:layout_width="0dp"
            tools:ignore="UseSwitchCompatOrMaterialXml">
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="0"
                    android:src="@drawable/smarthome"
                    android:layout_width="30dp"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:text="Modo\nSistema Rega"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/manState"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:text="Unknown"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"/>
                <Switch
                    android:id="@+id/manSwitch"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:trackTint="#B0B0B0"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

</LinearLayout>